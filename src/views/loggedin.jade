          a(href='/#/profile') Profile
        li
          a(href='/#/happenings') Happenings
        li(ng-controller='FBCtrl as fb')
          a(href='/#/logout' ng-click='fb.logout()') Log out
.container
  .interests(ng-controller="InterestsCtrl")
    form(name="addInterest", novalidate)
      .form-group
        label.control-label Add Interest
        input.form-control(name="intName" type="text" placeholder='e.g. "Ultimate Frisbee"' ng-model="name" required)
        button.btn.btn-primary(ng-click="addOne()") Add
    ul
      li(ng-repeat="interest in list")
        p(data-id="interest.id") {{interest.name}}
        button(ng-click="removeOne($index)") Delete

