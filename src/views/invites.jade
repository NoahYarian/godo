  .someDiv(ng-controller="EventCtrl" ng-init="loggedInUser && updateCalendarAndGetInvites(loggedInUser)")
    h1 Your Invites
    //- button.btn.btn-info(ng-click="updateCalendarAndGetInvites(loggedInUser)") updateCalendarAndGetInvites(loggedInUser);
    table.table-hover
      thead
        tr
          th Interest
          th Day
          th Time
          th # Confirmed
          th # Needed
          th # Invited
          th # Declined
          th Minimum
          th Maximum
          th
          th
      tbody
        tr
          tr(ng-repeat="invite in invites" ng-class="{'row-confirmed': hasConfirmed && invite.neededNum === 2}")
            td {{invite.interest}}
            td {{invite.day}}
            td {{invite.time}}
            td {{invite.confirmedNum}}
            td {{invite.neededNum}}
            td {{invite.invitedNum}}
            td {{invite.declinedNum}}
            td {{invite.minPeople}}
            td {{invite.maxPeople}}
            td.button-td
              div(ng-hide="hasConfirmed || hasDeclined")
                button.btn.btn-success(ng-click="confirm($index); hasConfirmed = true") Confirm
                button.btn.btn-danger(ng-click="decline($index); hasDeclined = true") Decline
              div(ng-show="hasConfirmed")
                button.btn.btn-danger(ng-click="unConfirm($index); hasConfirmed = false") Un-confirm
              div(ng-show="hasDeclined")
                button.btn.btn-info(ng-click="unDecline($index); hasDeclined = false") Un-decline
              div
                button(type="button" class="btn btn-default email-button" ng-class="{'btn-primary': invite.messageNum > 0}" aria-label="Messages")
                  span.glyphicon.glyphicon-envelope(aria-hidden="true")
